      "primary": "#2E86AB",
      "secondary": "#A23B72",
      "accent": "#F18F01",
      "text": "#2D3047",
      "background": "#FFFFFF"
    },
    "fonts": {
      "title": "Arial Black",
      "body": "Arial",
      "accent": "Calibri"
    },
    "effects": {
      "shadow": true,
      "3d_rotation": false,
      "reflection": true,
      "glow": false
    }
  },
  "structure": [
    {
      "slide_number": 1,
      "title": "Титульный слайд",
      "layout": "title",
      "content": {
        "main_title": "Название компании",
        "subtitle": "Слоган или описание",
        "date": "2025",
        "logo_position": "center"
